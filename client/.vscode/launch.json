{
	"version": "0.2.0",
	"configurations": [
        
        {
            "type": "node",
            "request": "launch",
            "protocol": "inspector",
            "name": "Mocha Tests",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "args": [
                "--opts", "${workspaceRoot}/mocha.opts",
                "--timeout", "999999",
                "--colors"
            ],
            "sourceMaps": true,
            "internalConsoleOptions": "openOnSessionStart",
            "port": 9229,
            "cwd": "${workspaceRoot}"
        }
	]
}