{
  "name": "sprotty",
  "version": "0.1.0",
  "description": "A next-gen framework for graphical views",
  "author": "TypeFox",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/TypeFox/sprotty"
  },
  "files": [
    "lib",
    "src"
  ],

  "dependencies": {
    "inversify": "^3.1.0",
    "snabbdom": "^0.6.4",
    "snabbdom-jsx": "^0.3.1",
    "nyc": "^10.3.2",
    "snabbdom-virtualize": "^0.6.0"
  },
  "devDependencies": {
    "@types/chai": "^3.4.35",
    "@types/mocha": "^2.2.40",
    "@types/node": "^7.0.10",
    "chai": "^3.5.0",
    "circular-dependency-plugin": "^2.0.0",
    "jsdom": "9.12.0",
    "jsdom-global": "2.1.1",
    "mocha": "^3.2.0",
    "reconnecting-websocket": "^3.0.3",
    "reflect-metadata": "^0.1.10",
    "rimraf": "^2.6.1",
    "snabbdom-to-html": "^3.1.1",
    "ts-loader": "^2.0.0",
    "ts-node": "^2.1.0",
    "typescript": "^2.2.2",
    "typings": "^2.1.0",
    "webpack": "^2.2.1"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "typings",
      "src/**/*.spec.ts"
    ],
    "reporter": [
      "html"
    ],
    "extension": [
      ".ts"
    ]
  },
  "scripts": {
    "clean": "rimraf lib",
    "build": "tsc",
    "watch": "tsc --watch",
    "test": "mocha --opts ./mocha.opts",
    "coverage": "nyc mocha --opts ./mocha.opts",
    "prepare": "npm run clean && npm run build",
    "prepublishOnly": "npm run test",
    "examples:build": "webpack --progress",
    "examples:watch": "webpack --progress --watch"
  }
}
