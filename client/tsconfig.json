{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "build",
    "lib": ["es6", "dom"],
    "types": ["node", "reflect-metadata"],
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "typeRoots": ["node_modules/@types",
      "typings"
    ],
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "jsx": "react",
    "reactNamespace": "JSX"
  },
  "exclude": [
    "node_modules"
  ]
}